<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.ScrollPane?>
<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@HelpWindow.css"/>
            </stylesheets>
            <ScrollPane prefWidth="600" prefHeight="800" fitToWidth="true" fitToHeight="true"  >
            <HBox alignment="CENTER" fx:id="helpMessageContainer">
                <padding>
                    <Insets top="10.0" right="10.0" left="10.0" bottom="10.0"/>
                </padding>
                <children>
                    <TextFlow fx:id="helpMessage">
                        <HBox.margin>
                            <Insets right="5.0"/>
                        </HBox.margin>
                    </TextFlow>
                </children>
            </HBox>
            </ScrollPane>
        </Scene>
    </scene>
</fx:root>
