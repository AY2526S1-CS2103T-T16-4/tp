<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15"/>
            </padding>
            <HBox spacing="0.5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minWidth>
                </Label>
                <Label fx:id="donorName" text="\$first" styleClass="cell_big_label"/>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <image>
                        <Image url="@../images/donation_date_icon.png"/>
                    </image>
                </ImageView>
                <Label fx:id="donationDate" styleClass="cell_small_label" text="\$donationDate"/>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <image>
                        <Image url="@../images/blood_drop_icon.png"/>
                    </image>
                </ImageView>
                <Label fx:id="bloodVolume" styleClass="cell_small_label" text="\$bloodVolume"/>
            </HBox>
            <FlowPane fx:id="tags"/>
        </VBox>
    </GridPane>
</HBox>
